<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xunheng.wechat.infrastructure.mapper.WoaFansMapper">

    <sql id="filterSql">
        <where>
            woaf.del_flag = 0
            <if test="qry.id != null and qry.id != ''"> and woaf.id  = #{qry.id} </if>
            <if test="qry.appId != null and qry.appId != ''"> and woaf.app_id  = #{qry.appId} </if>
            <if test="qry.nickName != null and qry.nickName != ''"> and woaf.nick_name like concat('%',#{qry.nickName},'%')</if>
        </where>
    </sql>

    <select id="pageList" parameterType="com.xunheng.wechat.client.dto.query.WoaFansPageQuery" resultType="com.xunheng.wechat.infrastructure.DO.WoaFans">
        select woaf.*
        from wc_woa_fans woaf
        <include refid="filterSql"/>
        order by woaf.create_time desc
    </select>

</mapper>